{
  "private": true,
  "description": "Technology Regulated and Operated Investment Funds",
  "author": "Melon Council DAO <team@meloncouncil.io>",
  "license": "GPL-3.0",
  "homepage": "https://melonprotocol.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/protocol.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/protocol/issues"
  },
  "keywords": [
    "Defi",
    "Ethereum",
    "Melon",
    "Smart Contracts",
    "Solidity"
  ],
  "scripts": {
    "codegen": "yarn codegen:contracts && yarn codegen:tests",
    "codegen:contracts": "crestproject codegen \"build/*.json\" tests/contracts/codegen",
    "codegen:tests": "crestproject codegen \"tests/contracts/build/*.json\" tests/contracts/codegen",
    "compile:contracts": "waffle compile waffle.json",
    "compile:tests": "waffle compile tests/waffle.json",
    "compile": "yarn compile:contracts && yarn compile:tests",
    "build": "yarn compile && yarn codegen",
    "test": "yarn jest",
    "format": "prettier --write {*,**/*}.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@crestproject/crestproject": "^0.0.15",
    "@nomiclabs/buidler": "^1.3.8",
    "@openzeppelin/contracts": "^3.1.0",
    "@types/jest": "^26.0.3",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^4.0.0-beta"
  },
  "resolutions": {
    "ganache-core": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz"
  },
  "jest": {
    "projects": [
      {
        "preset": "@crestproject/crestproject",
        "roots": [
          "<rootDir>/tests"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setup.ts"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": {
              "warnOnly": true
            }
          }
        }
      }
    ]
  }
}
