{
  "name": "@melonproject/protocol",
  "version": "2.0.0",
  "description": "Technology Regulated and Operated Investment Funds",
  "author": "Melon Council DAO <team@meloncouncil.io>",
  "license": "GPL-3.0",
  "homepage": "https://melonprotocol.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/protocol.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/protocol/issues"
  },
  "keywords": [
    "Defi",
    "Ethereum",
    "Melon",
    "Smart Contracts",
    "Solidity"
  ],
  "scripts": {
    "codegen": "yarn codegen:contracts && yarn codegen:tests",
    "codegen:contracts": "crestproject codegen \"artifacts/*.json\" tests/codegen",
    "codegen:tests": "crestproject codegen \"tests/artifacts/*.json\" tests/codegen",
    "compile": "yarn compile:contracts && yarn compile:tests",
    "compile:contracts": "buidler compile",
    "compile:tests": "buidler compile --config tests/buidler.config.js",
    "build": "yarn compile && yarn codegen",
    "prepackage": "rimraf package",
    "package": "tsc && node scripts/package",
    "test": "yarn jest",
    "format": "prettier --write \"{tests,contracts}/{*,**/*}.{sol,ts}\"",
    "lint": "yarn lint:prettier && yarn lint:solhint",
    "lint:prettier": "prettier --list-different \"{tests,contracts}/{*,**/*}.{sol,ts}\"",
    "lint:solhint": "solhint \"tests/**/*.sol\" \"contracts/**/*.sol\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.1.0"
  },
  "devDependencies": {
    "@crestproject/crestproject": "^0.0.19",
    "@nomiclabs/buidler": "^1.4.3",
    "@types/jest": "^26.0.3",
    "ethers": "^5.0.5",
    "fs-extra": "^9.0.1",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.55",
    "rimraf": "^3.0.2",
    "solhint": "^3.1.0",
    "ts-jest": "^26.1.4",
    "typescript": "^4.0.0-beta"
  },
  "jest": {
    "projects": [
      {
        "preset": "@crestproject/crestproject",
        "roots": [
          "<rootDir>/tests"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": {
              "warnOnly": true
            }
          }
        }
      }
    ]
  }
}
