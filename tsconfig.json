{
  "compilerOptions": {
    "target": "es2015",
    "lib":[
      "es2015",
      "es2017.object",
      "es2017.string"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "out/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*.ts",
    "src/**/*.test.ts"
  ]
}